{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@algo-playground/web/ui/components": [
        "libs/web/ui/components/src/index.ts"
      ],
      "@algo-playground/web/ui/styles": ["libs/web/ui/components/src/index.ts"],
      "@algo-playground/simulation/physics": [
        "libs/simulation/physics/src/index.ts"
      ],
      "@algo-playground/shared/web/hooks": [
        "libs/shared/web/hooks/src/index.ts"
      ],
      "@algo-playground/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
